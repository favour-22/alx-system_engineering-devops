#!/usr/bin/env bash

# Script to configure Nginx to run as the nginx user and listen on all active IPs on port 8080

# Stop the current Nginx service
service nginx stop

# Change the user and group that Nginx runs as
sed -i 's/user www-data;/user nginx;/g' /etc/nginx/nginx.conf

# Change the listen port to 8080
sed -i 's/listen 80;/listen 0.0.0.0:8080;/g' /etc/nginx/sites-available/default

# Start the Nginx service as the nginx user
service nginx start
